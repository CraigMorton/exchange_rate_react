{
    "rules": {
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "never"
        ],
        "no-console": [2, {"allow": ["error"]} ],
        "no-unused-expressions": [2, {"allowShortCircuit": true}],
        "react/react-in-jsx-scope": 2,
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2
    },
    "env": {
        "es6": true,
        "browser": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        },
        "modules": true,
        "sourceType": "module",
        "ecmaVersion": 6
    },
    "plugins": [
        "react"
    ]
}
